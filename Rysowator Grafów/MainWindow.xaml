<Window x:Class="Rysowator_Grafów.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kolorowator Grafów — by ceski23" Height="107" Width="360" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Height="50">
                <Button Name="VerticesButton" Click="VerticesButton_OnClick" Margin="10" Width="150">Generuj wierzchołki</Button>
                <Button Name="EdgesButton" Click="EdgesButton_OnClick" Margin="10" Width="150">Generuj krawędzie</Button>
            </StackPanel>
            <ProgressBar Name="ProgressBar" Height="20"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
