<Window x:Class="Rysowator_Grafów.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kolorowator Grafów — by ceski23" Height="380" Width="250" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image Name="GraphImage" Width="220" Height="180" Margin="10" Stretch="Uniform" />
            <Button Name="LoadGraphButton" Click="LoadGraphButton_OnClick" Height="30" Margin="10,0,10,10">Wybierz plik z grafem...</Button>
                
            <Line X1="10" X2="225" Y1="0" Y2="0" Stroke="Black" Margin="0,5,0,5" StrokeThickness="0.5" />
                
            <Button IsEnabled="False" Name="VerticesButton" Click="VerticesButton_OnClick" Margin="10" Height="30">Generuj kolorowania wierzchołków</Button>
            <Button IsEnabled="False" Name="EdgesButton" Click="EdgesButton_OnClick" Margin="10,0,10,10" Height="30">Generuj kolorowania krawędzi</Button>
        </StackPanel>
    </Grid>
</Window>
